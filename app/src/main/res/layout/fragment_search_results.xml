<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background">

    <!-- ================= HEADER ================= -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/orange_header">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            app:tint="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toEndOf="@id/btn_back"
            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_from_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mumbai"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/ic_swap_vertical"
                app:tint="@color/white"/>

            <TextView
                android:id="@+id/tv_to_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Delhi"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_back"
            android:layout_toEndOf="@id/btn_back"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Wed, 18 Jun • 1 Traveller • Economy"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </RelativeLayout>

    <!-- ================= BOTTOM BAR ================= -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingTop="20dp"
        android:background="@drawable/bg_bottom_bar_card"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹ 9,800"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <TextView
                android:id="@+id/tv_discount_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get 20% Off"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:background="@drawable/bg_continue_button"
            android:minHeight="48dp"/>

    </LinearLayout>

    <!-- ================= CENTER SCROLL ================= -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/centerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/bottom_bar"
        android:fillViewport="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="0dp">

            <!-- DATE STRIP -->
            <HorizontalScrollView
                android:id="@+id/scroll_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/ll_dates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- Dates will be added dynamically -->
                </LinearLayout>
            </HorizontalScrollView>

            <!-- FILTER BUTTONS -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_filter_buttons"
                android:layout_width="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                tools:listitem="@layout/item_filter_button" />

            <!-- FLIGHT DIRECTION SELECTION -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/secondary_gradient">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Onward Tab -->
                    <LinearLayout
                        android:id="@+id/card_onward"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center"
                        android:background="@drawable/bg_tab_selected_left"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/tv_onward_route"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BOM → DEL"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_onward_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wed, 18 Jun • Onward"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Return Tab -->
                    <LinearLayout
                        android:id="@+id/card_return"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center"
                        android:background="@drawable/bg_tab_unselected_right"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/tv_return_route"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEL → BOM"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_return_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wed, 18 Jun • Return"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- FLIGHT LIST - Two Independent RecyclerViews -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:minHeight="400dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    
                    <!-- Left RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_list_left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="true"
                        tools:listitem="@layout/item_flight_search"/>
                    
                    <!-- Vertical Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/text_secondary"
                        android:alpha="0.3"/>
                    
                    <!-- Right RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_list_right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="true"
                        tools:listitem="@layout/item_flight_search"/>
                </LinearLayout>
                
                <!-- Progress Loader -->
                <ProgressBar
                    android:id="@+id/progress_loader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="@color/orange_header"/>
            </FrameLayout>

            <!-- Spacer for bottom bar -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
