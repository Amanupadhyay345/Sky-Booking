<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_flight_unselected">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_flight_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="5dp">

            <!-- Top Row: Airline Logo/Name, Price, Meal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Airline Logo and Name -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_airline_logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_circle_white"
                        android:padding="8dp"
                        android:src="@drawable/aeroplane"
                        android:contentDescription="Airline Logo" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_airline_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IndiGo"
                            android:maxLines="1"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_flight_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6E-0402"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Price and Meal -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 9,800"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_meal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paid Meal"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Flight Times with Arrow, Duration and Stops -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Departure Time (Start of Arrow) -->
                <TextView
                    android:id="@+id/tv_departure_time"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/centerArrow"
                    app:layout_constraintTop_toTopOf="@id/centerArrow"
                    android:layout_height="50dp"
                    android:text="12:00"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Flight Path Arrow with Stops Above and Duration Below -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:id="@+id/centerArrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_departure_time"
                    app:layout_constraintEnd_toStartOf="@id/tv_arrival_time"
                    app:layout_constraintStart_toEndOf="@id/tv_departure_time"
                    android:layout_marginHorizontal="12dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Stops (Above Arrow) -->
                    <TextView
                        android:id="@+id/tv_stops"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Stop"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <!-- Dashed Line with Arrow -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:minHeight="20dp"
                        android:gravity="center_vertical">

                        <!-- Dashed Line -->
                        <View
                            android:id="@+id/dashed_line_view"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:backgroundTint="@color/black"
                            android:layout_centerVertical="true"
                            android:background="@drawable/dashed_line" />

                        <!-- Arrow Icon at the end (right side) -->
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_right"
                            android:contentDescription="Flight direction" />
                    </RelativeLayout>

                    <!-- Duration (Below Arrow) -->
                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5h 0m"
                        android:visibility="visible"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Arrival Time (End of Arrow) -->
                <TextView
                    android:id="@+id/tv_arrival_time"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="17:00"
                    app:layout_constraintBottom_toBottomOf="@id/centerArrow"
                    app:layout_constraintTop_toTopOf="@id/centerArrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Details Button -->
            <TextView
                android:id="@+id/tv_details"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:text="Details"
                android:textColor="@color/primary_blue"
                android:textSize="14sp"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="4dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
