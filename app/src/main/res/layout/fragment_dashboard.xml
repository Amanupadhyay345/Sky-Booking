<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"

    android:layout_marginTop="10dp"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!-- Hello Text -->
            <TextView
                android:id="@+id/tv_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello,"
                android:textColor="#757575"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Where to go? Text -->
            <TextView
                android:id="@+id/tv_where_to_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Where to go?"
                android:textColor="#424242"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_hello"
                app:layout_constraintTop_toBottomOf="@+id/tv_hello" />

            <!-- Wallet Icon -->
            <ImageView
                android:id="@+id/iv_wallet"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/wallet"
                app:layout_constraintBottom_toBottomOf="@+id/tv_where_to_go"
                app:layout_constraintEnd_toStartOf="@+id/iv_notification"
                app:layout_constraintTop_toTopOf="@+id/tv_hello" />

            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/b"
                app:layout_constraintBottom_toBottomOf="@+id/tv_where_to_go"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_hello" />

            <!-- Categories Grid Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/tv_where_to_go">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:minHeight="150dp"
                    android:nestedScrollingEnabled="false" />

            </androidx.cardview.widget.CardView>

            <!-- Expand/Collapse Button -->
            <ImageView
                android:id="@+id/iv_expand_collapse"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="-20dp"
                android:src="@drawable/expends"
                android:background="@drawable/bg_circle_white"
                android:elevation="6dp"
                android:padding="8dp"
                android:contentDescription="Expand/Collapse"
                app:layout_constraintEnd_toEndOf="@+id/card_categories"
                app:layout_constraintStart_toStartOf="@+id/card_categories"
                app:layout_constraintTop_toBottomOf="@+id/card_categories" />

            <!-- Our Offers Section -->
            <TextView
                android:id="@+id/tv_offers_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Our Offers"
                android:textColor="#424242"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_expand_collapse" />

            <TextView
                android:id="@+id/tv_view_all_offers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="@color/primary_blue"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/tv_offers_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_offers_title" />

            <!-- Offers RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_offers"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_offers_title" />

            <!-- Pagination Dots -->
            <LinearLayout
                android:id="@+id/ll_pagination_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_offers" />

            <!-- Recommended Section -->
            <TextView
                android:id="@+id/tv_recommended_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Recommended"
                android:textColor="#757575"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_pagination_dots" />

            <TextView
                android:id="@+id/tv_view_all_recommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="@color/primary_blue"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/tv_recommended_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_recommended_title" />

            <!-- Tab Navigation -->
            <LinearLayout
                android:id="@+id/ll_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_recommended_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_tab_flight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="16dp"
                    android:background="@android:color/transparent">

                    <ImageView
                        android:id="@+id/iv_tab_flight_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/aeroplane"
                        android:tint="#FF4F17"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/view_tab_flight_divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_tab_flight"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintHorizontal_bias="0.5" />

                    <TextView
                        android:id="@+id/tv_tab_flight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flight"
                        android:textColor="#FF4F17"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/view_tab_flight_divider"
                        app:layout_constraintStart_toEndOf="@+id/iv_tab_flight_icon"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Divider for selected tab -->
                    <View
                        android:id="@+id/view_tab_flight_divider"
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:background="#FF4F17"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_tab_bus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="16dp"
                    android:background="@android:color/transparent">

                    <ImageView
                        android:id="@+id/iv_tab_bus_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/bus"
                        android:tint="#757575"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/view_tab_bus_divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_tab_bus"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintHorizontal_bias="0.5" />

                    <TextView
                        android:id="@+id/tv_tab_bus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bus"
                        android:textColor="#757575"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/view_tab_bus_divider"
                        app:layout_constraintStart_toEndOf="@+id/iv_tab_bus_icon"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Divider for selected tab -->
                    <View
                        android:id="@+id/view_tab_bus_divider"
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:background="#FF4F17"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_tab_hotels"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="16dp"
                    android:background="@android:color/transparent">

                    <ImageView
                        android:id="@+id/iv_tab_hotels_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/booking"
                        android:tint="#757575"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/view_tab_hotels_divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_tab_hotels"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintHorizontal_bias="0.5" />

                    <TextView
                        android:id="@+id/tv_tab_hotels"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotels"
                        android:textColor="#757575"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/view_tab_hotels_divider"
                        app:layout_constraintStart_toEndOf="@+id/iv_tab_hotels_icon"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Divider for selected tab -->
                    <View
                        android:id="@+id/view_tab_hotels_divider"
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:background="#FF4F17"
                        android:visibility="gone"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <!-- Recommended RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recommended"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="40dp"
                android:clipToPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/ll_tabs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Unlock the World Section -->
            <TextView
                android:id="@+id/tv_unlock_world_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Unlock the World"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_recommended" />

            <TextView
                android:id="@+id/tv_view_all_destinations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/tv_unlock_world_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_unlock_world_title" />

            <!-- Destinations RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_destinations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:clipToPadding="false"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/tv_unlock_world_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_destinations"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
