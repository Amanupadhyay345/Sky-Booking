<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/custom_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bottom_nav_background"
        android:elevation="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home Item -->
        <LinearLayout
            android:id="@+id/nav_item_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/bottom_nav_item_background">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                app:tint="@color/bottom_nav_unselected" />

            <TextView
                android:id="@+id/label_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Home"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/bottom_nav_unselected"
                android:singleLine="true"
                android:ellipsize="none"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Routes Item -->
        <LinearLayout
            android:id="@+id/nav_item_routes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/bottom_nav_item_background">

            <ImageView
                android:id="@+id/icon_routes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/route"
                app:tint="@color/bottom_nav_unselected" />

            <TextView
                android:id="@+id/label_routes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Routes"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/bottom_nav_unselected"
                android:singleLine="true"
                android:ellipsize="none"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Discount Item -->
        <LinearLayout
            android:id="@+id/nav_item_discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/bottom_nav_item_background">

            <ImageView
                android:id="@+id/icon_discount"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/persent"
                app:tint="@color/bottom_nav_unselected" />

            <TextView
                android:id="@+id/label_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Discount"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/bottom_nav_unselected"
                android:singleLine="true"
                android:ellipsize="none"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Profile Item -->
        <LinearLayout
            android:id="@+id/nav_item_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/bottom_nav_item_background">

            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/user"
                app:tint="@color/bottom_nav_unselected" />

            <TextView
                android:id="@+id/label_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Profile"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/bottom_nav_unselected"
                android:singleLine="true"
                android:ellipsize="none"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

